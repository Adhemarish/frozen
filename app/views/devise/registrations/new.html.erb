<h2>Créer un compte</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                label: 'Entrez votre nom complet',
                placeholder: '0laf Frozen',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%= f.input :email,
                placeholder: 'olaf@frozen.com',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                label: 'Mot de passe',
                required: true,
                hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :avatar,
                label: "Photo de votre avatar",
                required: true %>
    <%= f.input :avatar_cache, as: :hidden %>
    <%= f.input :password_confirmation,
                label: 'Confirmez votre mot de passe',
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Créer un compte" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

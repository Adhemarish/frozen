<h2 class="mdp-oublie">Mot de passe oublié ?</h2>

<div class="sign-up-form form-inputs mx-auto width-form mt-5">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions text-warning">
    <%= f.button :submit, "Envoyez-moi les instructions de mise à jour du mot de passe" %>
  </div>
<% end %>


<div class="my-equipments-title d-flex justify-content-between" style="margin-left:450px">
  <h2 class="m-5">Mes équipements mis en ligne</h2>
  <%= link_to "Ajouter un nouvel équipement", new_owner_equipment_path, class:'btn btn-flat m-5'%>
</div>


<div class="container">
  <div class="row">
    <% @equipments.each do |equipment| %>
    <div class="col-6 mb-3 p-2">
      <div class="my-equipments-card d-flex">
        <div class="flex-max-40">
          <%= cl_image_tag(equipment.picture,width: 150, height: 200, crop: :fill, class:'m-5') %>
        </div>
        <div class="flex-max-50 d-flex flex-column justify-content-between">
          <div class="">
            <h5 class="mt-3"><%=equipment.title%></h5>
            <p class="text-my-equip mb-2"><%=equipment.material_category%></p>
            <p class=""><%= raw equipment.details.gsub(".", ".<br>") %></p><br>
          </div>
          <div class="">
            <p class='card-index-price my-4' style="font-size:20px; "><%= equipment.price_per_day %> € / jour</p>
            <p class="mb-2" style="font-size:14px;"><%=equipment.location%></p>
          </div>
        </div>
      </div>
    </div>
      <% end %>
    </div>
  </div>
</div>




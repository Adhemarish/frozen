<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path PATH_TO_BANNER_PICTURES, height: 300, width: 400, crop: :fill %>')">
  <h1>Welcome to FROZEN!</h1>
  <p>Rent your skiing equipment</p>
</div>

<% @equipments.each do |equipment| %>
  <div class="card home-equipment-card" style="width: 18rem;">
    <div class="card-image">
      <%= cl_image_tag equipment.picture, height: 300, width: 400, crop: :fill %>
    </div>

    <div class="card-body">
      <h2 class="card-title"><%= link_to equipment.title, equipment_path(equipment) %> %></h2>
      <div class="row">
        <p class="card-category"><%=  equipment.material_category %></p>
        <p class="card-price"><%=  equipment.price_per_day %></p>
      </div>
    </div>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row ">
    <div class="col-7">
      <div class="card card-show-equipment">
        <div class="mx-auto mt-2">
          <%= cl_image_tag @equipment.picture, size: '300x300', class:"mx-auto" %>
        </div>
        <div>
            <h2 class="mt-3 pt-3 text-center border-top"><%= @equipment.title %></h2>
            <p class="m-3 text-justify"><%= @equipment.details %></p>
            <div class="row price-location justify-content-between">
              <p class="text-warning ml-5 mb-3"><strong><%= @equipment.price_per_day %>€ / jour</strong></p>
              <p class="mr-5"><strong>Localisation : </strong><%= @equipment.location %></p>
            </div>
        </div>
      </div>
    </div>

    <div class="col-5">
      <div class="card">
        <h5 class="text-center mt-3"><strong>Demande de réservation</strong></h5>
        <div class="card-body">
          <div class="form-inputs">
            <%= simple_form_for [@equipment, @booking] do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <%= f.input :starting_date, as: :string, label: 'Date début location', required: false, input_html: {class: "datepicker"} %>
            <%= f.input :ending_date, as: :string, label: 'Date fin location',required: false, input_html: {class: "datepicker"} %>
          </div>
          <div class="form-actions text-center">
            <%= f.button :submit, "Soumettre votre réservation", class:'btn btn-flat-voir' %>

          </div>
          <% end %>
        </div>
      </div>

      <div
          id="map"
          style="width: 100%;
          height: 317px;
          margin-top: 10px"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
  </div>
</div>

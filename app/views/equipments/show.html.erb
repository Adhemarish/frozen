<h1><%= @equipment.title %></h1>

<div class="container">
  <div class="row ">
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <%= image_tag @equipment.picture, size: '300x300' %>
          <div class="card-text">
            <div class="list-group">
              <li><%= @equipment.title %></li>
              <li>Ou louer? <%= @equipment.location %></li>
              <li><%= @equipment.material_category %></li>
              <li><%= @equipment.details %></li>
              <li>Prix: <%= @equipment.price_per_day %>Eur / jour</li>
              <li><%= @booking.total_price if @booking.total_price %></li>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="card">
        <div class="card-body">
          <div class="form-inputs">
            <%= simple_form_for [@equipment, @booking] do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <%= f.input :starting_date, as: :date, label: 'Date début location' %>
            <%= f.input :ending_date, as: :date, label: 'Date fin location' %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Soumettre votre réservation" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<h1>Bookings#new</h1>
<p>Find me in app/views/bookings/new.html.erb</p>

<div class="col-4">
      <div class="card">
        <div class="card-body">
          <div class="form-inputs">
            <%= simple_form_for [@equipment, @booking] |f| do %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <%= f.input :starting_date, as: :date, label: 'Date début location' %>
            <%= f.input :ending_date, as: :date, label: 'Date fin location' %>
            <% end %>
          </div>
          <div class="form-actions"></div>
          <%= f.button :submit, "Créer une réservation" %>
        </div>
        </div>
      </div>

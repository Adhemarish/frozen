<h2 class="text-center">Mes réservations</h2>

<br>


<div class="container justify-content-center">
  <div class="row">
    <col-6>
      <list-group>

        <list-group-item>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">Equipement</th>
                <th scope="col">Location</th>
                <th scope="col">Début</th>
                <th scope="col" >Fin</th>
                <th scope="col">Prix total</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <% @bookings.each do |booking| %>
            <tbody>
              <tr>
                <th scope="col"><%= link_to booking.equipment.title, equipment_path(booking.equipment)  %>
                </th>
                <th scope="col"><%= booking.equipment.location%></th>
                <th scope="col"><%= booking.starting_date %></th>
                <th scope="col"><%= booking.ending_date %></th>
                <th scope="col"><%= booking.total_price %> €</th>


                <th scope="col">
                  <% if booking.status == 'Pending'%>
                <div class="btn btn-warning">En attente</div>
                <% elsif booking.status == 'available'%>
                  <div class="btn btn-success">Accept</div>
                  <% else%>
                  <div class="btn btn-danger">Déjà loué</div>
                  <% end %>
                  </th>
                <th scope="col" > <%= link_to booking_path(booking), method: :delete, data: { confirm: 'Sure?' }, class: 'text-secondary' do %>
                      <i class="fa fa-times-circle fa-2x" data-toggle="tooltip" data-placement="top" title="Delete"></i>
                    <% end %>
                  </th>
              </tr>
            </tbody>
            <% end %>
          </table>
        </list-group-item>
      </list-group>
    </col-6>
  </div>
</div>



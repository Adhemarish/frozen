<h2 class="text-center mt-4">Mes réservations</h2>

<br>
<div class="tableau">

<div class="container justify-content-center">
  <div class="row">
    <col-6>
      <list-group>

        <list-group-item>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Equipement</th>
                <th scope="col">Localisation / Propriétaire</th>
                <th scope="col">Début</th>
                <th scope="col" >Fin</th>
                <th scope="col">Prix total</th>
                <th scope="col">Statut</th>
              </tr>
            </thead>
            <% @bookings.each do |booking| %>
            <tbody>
              <tr>
                <th scope="col"><%= link_to booking.equipment.title, equipment_path(booking.equipment), {:style=>'color: black'}  %>
                </th>
                <th scope="col"><%= booking.equipment.location%> /
                  <%= booking.equipment.owner.name %>
                </th>
                <th scope="col"><%= booking.starting_date %></th>
                <th scope="col"><%= booking.ending_date %></th>
                <th scope="col"><%= booking.total_price %> €</th>


                <th scope="col">
                  <% if booking.status == 'pending'%>
                    <div class="btn btn-warning">En attente</div>
                  <% elsif booking.status == 'accepted'%>
                    <div class="btn btn-success">Accepté</div>
                  <% elsif booking.status == 'declined'%>
                    <div class="btn btn-danger">Décliné</div>
                  <% else%>
                    <div class="btn btn-danger">Annulé</div>
                  <% end %>
                </th>
                <th scope="col" > <%= link_to booking_path(booking), method: :delete, data: { confirm: 'Sure?' }, class: 'text-secondary' do %>
                      <i class="fa fa-times-circle fa-2x" data-toggle="tooltip" data-placement="top" title="Annuler"></i>
                    <% end %>
                </th>
              </tr>
            </tbody>
            <% end %>
          </table>
        </list-group-item>
      </list-group>
    </col-6>
  </div>
</div>

</div>

